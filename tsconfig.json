{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ES5", "ES6", "ES2020", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@common/*": ["./src/_common/*"],
      "@config/*": ["./src/_config/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
